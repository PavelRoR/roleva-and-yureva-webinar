@media screen and (min-width 1900px)
    #know
        background-position: 100% bottom
@media screen and (min-width 2300px)
    .container
        width 1400px
    #post #main_screen
        background-position: 73% 32%
        padding 100px 0
    #main
        padding 100px 0
    .pre
    .for_list li
    .know_list li
    #myPolitics .modal-title
    .link_for
        font-size: 24px
    .authors
    #myPolitics .modal-body p
    .alert_message
    .mail
    .begin_date
        font-size: 22px
    .button
        font-size: 20px
        width: 425px;
        max-width 100%
    .for_after_title
        font-size: 40px
        max-width: 474px
    .checking .check_label
        font-size: 16px
    .button_mail
        width: 365px
    .post_title
        font-size: 43px
    #know
        background-position: 83% bottom;
    .know_list li
        height 72px
    #collage
        margin-top: 80px
    .main_subtitle
        font-size: 30px
        max-width 690px
@media screen and (max-width 1199px)
    #know
        background-position: 130px bottom
    #collage
        width: 400px
        margin-top: 100px
@media screen and (max-width 991px)
    #main
        padding: 40px 0
    .main_title
        font-size: 40px
    .main_subtitle
        margin-left: 10px
    .button
        margin-top: 30px
    #for
        padding 40px 0
    .for_title
    .reach_title
        font-size: 34px
        background-position: 0 bottom;
        margin-bottom: 40px
    #collage
        display: none
    .for_after_title
        margin-top: 30px
    #know
        padding 40px 0
        background-image: none
@media screen and (max-width 767px)
    #myModalForm .modal-dialog
        margin 10px auto
@media screen and (max-width 750px)
    #main
        text-align: center
    .main_title
        margin 25px auto 15px
    .main_subtitle
        margin 0 auto
        max-width 500px
    .authors
        margin-top: 20px
    #flower_main
        left: 30px
        z-index 0
    .for_list li
        padding-left: 24px
        margin-bottom: 15px
    .know_list li
        padding-left: 55px
        margin-bottom: 15px
@media screen and (max-width 480px)
    #myModalForm .modal-dialog
        width: 96%;
@media screen and (max-width 426px)
    #main
        padding 20px 0
    .main_title
        font-size: 34px
    .for_title, .reach_title
    .post_title
        font-size: 30px
    .begin_date
        margin-top: 20px
    #for
    #know
        padding 30px 0
    .know_list li
        display block
        padding 55px 0 0
        background-position: center top
        margin-bottom: 30px
        height auto
        text-align: center
        span
            display block
    .link_for
        font-size: 16px
        word-break: break-all
@media screen and (max-width 360px)
    .pre
        font-size: 18px
    .main_title
        font-size: 28px
    .main_subtitle
        font-size: 24px
        line-height: 1.2
    .button
        width 100%
        font-size: 10px
    .for_title, .post_title, .reach_title
        font-size: 22px
    .for_title
        margin-bottom: 30px
        padding-left: 0
    #for_petals
        display: none
    .reach_title
        padding-left: 0
        margin-bottom: 30px
    .mail
        width 90%
        font-size: 14px
        margin-bottom: 0
    .button_mail
        margin-top: 20px
    .for_after_title
        font-size: 24px
    .begin_date
        font-size: 14px