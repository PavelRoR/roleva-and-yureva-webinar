#main
	padding: 80px 0
	background-color: rgba(#d8e0f0, .2)
	background-image url(../img/main_bg_2.jpg)
	background-repeat no-repeat
	background-position: center top
	background-size cover
.pre
	font-size: 20px;
	font-family: "OpenSansBold", sans-serif
	color: #fd5f59
	line-height: 1.3;
.main_title
	font-size: 53px;
	font-family: "Garamond", serif
	color: #fff
	line-height: 1.094;
	margin 37px 0 15px
	font-weight: normal
	width 100%
	max-width: 680px;
	letter-spacing: 1px;
.main_subtitle
	font-size: 27px;
	font-family: "GaramondItalic",serif;
	color: #fff
	line-height: 1.333;
	max-width: 615px;
	margin-left: 70px
.authors
	font-size: 16px;
	font-family: "OpenSansBold", sans-serif;
	color: #fff
	line-height: 1.2
	margin-top: 38px
.button
	border-radius: 28px;
	background-image: linear-gradient( 0deg, rgb(238,70,53) 0%, rgb(215,33,61) 100%);
	width: 314px;
	height: 55px;
	line-height: 55px;
	font-size: 14px;
	font-family: "OpenSansBold", sans-serif;
	color: rgb(255, 255, 255);
	margin-top: 60px
	position relative
	z-index: 19
	&:hover
		background-image: linear-gradient( 0deg, rgb(210,81,101) 0%, rgb(236,100,86) 100%);